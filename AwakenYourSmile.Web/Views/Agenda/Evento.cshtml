@model AwakenYourSmile.Appointment
@{
    ViewBag.Title = "Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="headline">
    <div class="container">
        <h3>Evento</h3>
    </div>
</section>
<section class="container page-content">

    <div class="eight columns offset-by-one">
        <div class="contact-form">
            <div class="clr"></div><br />

            <h5>Nombre:</h5>
            @Html.DisplayTextFor(model => model.FirstName)<br />
            <h5>Apellidos:</h5>
            @Html.DisplayTextFor(model => model.LastName)<br />
            <h5>Email:</h5>
            @Html.DisplayTextFor(model => model.Email)<br />
            <h5>Teléfono:</h5>
            @Html.DisplayTextFor(model => model.PhoneNumber)<br />
            <h5>Celular:</h5>
            @Html.DisplayTextFor(model => model.CellPhone)<br />
            <h5>Fecha:</h5>
            @Html.DisplayTextFor(model => model.AppointmentDate)<br />
            
            <input type="button" value="Confirmar" class="form-submit-button" onclick='document.location.href="@Url.Action("Confirmar", "Agenda", new { id = Model.ID })";return false;'>
            &nbsp;
            <input type="button" value="Rechazar" class="form-submit-button" onclick='document.location.href="@Url.Action("Cancelar", "Agenda", new { id = Model.ID })";return false;'>
            &nbsp;
            <input type="button" value="Regresar" class="form-submit-button" onclick='document.location.href="@Url.Action("Index", "Agenda")";return false;'>
            <br />
        </div>
    </div>
</section>
